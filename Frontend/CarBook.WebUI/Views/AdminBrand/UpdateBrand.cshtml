@model UpdateBrandDto

@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Özelliği Güncelleme</h4>
                        <p class="card-subtitle mb-4">Marka bilgileri ile ilgili yapacağınız güncelleme sonrası alttaki butonu kullanınız.</p>
                        <form method="post">
                            <input type="hidden" asp-for="BrandId" />
                            <div class="form-group">
                                <label for="exampleInputBrand">Marka Adı</label>
                                <input type="text" class="form-control" id="exampleInputBrand" asp-for="Name" placeholder="Marka Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

