@model List<ResultCarFeatureByCarIdDto>

<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
	<div class="row">
		@for(int i=0; i < Model.Count; i++)
		{
			if (i % 3 == 0 && i != 0)
			{
				<div class="row"></div>
			}
			<div class="col-md-4">
				<ul class="features">
					<li class="@(Model[i].Available?"check":"remove")"><span class="ion-ios-@(Model[i].Available?"checkmark":"close")"></span>@Model[i].FeatureName</li>
				</ul>
			</div>
		}
	</div>
</div>