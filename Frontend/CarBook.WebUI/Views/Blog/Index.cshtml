@model List<ResultBlogsWithAuthorsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @foreach(var item in Model)
            {
                <div class="col-md-12 text-center d-flex ftco-animate">
                    <div class="blog-entry justify-content-end mb-md-5">
                        <a href="/Blog/BlogDetails/@item.BlogId" class="block-20 img" style="background-image: url('/carbook/images/@item.CoverImageUrl');">
                        </a>
                        <div class="text px-md-5 pt-4">
                            <div class="meta mb-3">
                                <div><a href="#">@item.CreatedTime.ToString("dddd, dd MMMM yyyy")</a></div>
                                <div><a href="#">@item.AuthorName</a></div>
                                <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 4</a></div>
                            </div>
                            <h3 class="heading mt-2" style="margin: 0; margin-bottom: 0.5rem;"><a href="#">@item.Title</a></h3>
                            <p style="margin: 0; flex: 1; text-align: justify; margin-bottom: 0.5rem;">@item.Description</p>
                            <p><a href="/Blog/BlogDetails/@item.BlogId" class="btn btn-primary">Devamını Oku <span class="icon-long-arrow-right"></span></a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
