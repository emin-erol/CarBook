@model List<ResultCarFeatureByCarIdDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araca Ait Özellikler Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Araca ait özellik eklemesi yapabilir, mevcut özellikleri kaldırabilir, ilgili güncellemeleri
                            gerçekleştirebilirsiniz.
                        </p>
                        <form method="post">
                            <div class="container">
                                <div class="row">
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        if (i % 3 == 0 && i != 0)
                                        {
                                            <div class="row"></div>
                                        }
                                        <div class="col-md-4 mb-3">
                                            <div class="form-check">
                                                <input type="hidden" asp-for="@Model[i].CarFeatureId" />
                                                <input type="hidden" asp-for="@Model[i].FeatureName" />
                                                <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" id="feature-@Model[i].CarFeatureId" />
                                                <label class="form-check-label" for="feature-@Model[i].CarFeatureId">@Model[i].FeatureName</label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <button class="btn btn-success mt-3">Değişiklikleri Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

