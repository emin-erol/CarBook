@model CreateServiceDto

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Servis Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Eklemek istediğiniz yeni Servis bilgilerini lütfen doğru giriniz ve kaydet butonuna basınız.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Servis Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklamayı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIconUrl">İkon URL Adresi</label>
                                <input type="file" class="form-control" id="exampleInputIconUrl" asp-for="IconUrl" placeholder="URL Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Servisi Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>