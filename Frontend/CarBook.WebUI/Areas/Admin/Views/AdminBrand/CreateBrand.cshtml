@model CreateBrandDto

@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Marka Girişi</h4>
                        <p class="card-subtitle mb-4">Eklemek istediğiniz yeni araç markasını lütfen doğru giriniz ve kaydet butonuna basınız.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputBrand">Marka Adı</label>
                                <input type="text" class="form-control" id="exampleInputBrand" asp-for="Name" placeholder="Marka Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

