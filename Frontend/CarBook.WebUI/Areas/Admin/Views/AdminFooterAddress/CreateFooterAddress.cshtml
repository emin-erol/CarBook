@model CreateFooterAddressDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Adres Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Eklemek istediğiniz yeni adres bilgilerini lütfen doğru giriniz ve kaydet butonuna basınız.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputDescription">Adres Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Adres Açıklamasını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputAddress">Adres</label>
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" placeholder="Adresi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Telefon</label>
                                <input type="text" class="form-control" id="exampleInputPhone" asp-for="Phone" placeholder="Telefon No">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">E-mail</label>
                                <input type="text" class="form-control" id="exampleInputEmail" asp-for="Email" placeholder="Email Adresi Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adres Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



