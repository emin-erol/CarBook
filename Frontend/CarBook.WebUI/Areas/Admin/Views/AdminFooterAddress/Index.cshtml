@model List<ResultFooterAddressDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Alt Bilgi Adres Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sitenin alt kısmında bulunan Alt Bilgi (Footer) alanındaki adres bilgilerinin görüntülendiği 
                            bu sayfada gerekli düzenleme işlemleri yapabilirsiniz. Temanın doğru çalışabilmesi için birden
                            fazla adres bilgisi girilmemesi gerekmektedir.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Adres Açıklaması</th>
                                        <th>Adres</th>
                                        <th>Telefon</th>
                                        <th>E-mail</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Description</td>
                                            <td>@item.Address</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>
                                            <td><a href="/Admin/AdminFooterAddress/RemoveFooterAddress/@item.FooterAddressId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminFooterAddress/UpdateFooterAddress/@item.FooterAddressId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminFooterAddress/CreateFooterAddress" class="btn btn-outline-primary mt-3">Yeni Adres Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



