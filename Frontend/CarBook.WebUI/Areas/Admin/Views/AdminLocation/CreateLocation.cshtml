@model CreateLocationDto

@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Lokasyon Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Eklemek istediğiniz yeni lokasyon bilgilerini lütfen doğru giriniz ve kaydet butonuna basınız.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Lokasyon</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Lokasyonu Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Lokasyonu Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>