@model UpdateLocationDto

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lokasyon Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Bu alanda lokasyon bilgileri hakkında güncelleme yapabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="LocationId" />
                            <div class="form-group">
                                <label for="exampleInputName">Lokasyon</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Lokasyonu Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Lokasyonu Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>