@model List<ResultSocialMediaDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Hesapları</h4>
                        <p class="card-subtitle mb-4">
                            Anasayfanın sosyal medya hesapları alanı hakkında bulunan bilgileri aşağıdaki sayfadan düzenleyebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Sosyal Medya Adı</th>
                                        <th>Sosyal Medya Hesabı URL Adresi</th>
                                        <th>İkon URL Adresi</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Aç</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td>@item.Url</td>
                                            <td>@item.Icon</td>
                                            <td><a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="#" class="btn btn-outline-success">Aç</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminSocialMedia/CreateSocialMedia" class="btn btn-outline-primary mt-3">Yeni Sosyal Medya Hesabı Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>