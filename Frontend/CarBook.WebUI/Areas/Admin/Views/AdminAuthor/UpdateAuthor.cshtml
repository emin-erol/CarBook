@model UpdateAuthorDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yazar Bilgilerini Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Bu alanda Yazar hakındaki veriler hakkında güncelleme yapabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="AuthorId" />
                            <div class="form-group">
                                <label for="exampleInputName">Yazar Adı ve Soyadı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Adı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Yazar Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklamayı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Yazar Görseli URL Adresi</label>
                                <input type="file" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="URL Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

