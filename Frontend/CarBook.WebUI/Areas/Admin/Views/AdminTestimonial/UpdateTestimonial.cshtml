@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referans Bilgilerini Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Bu alanda Referans kişinin verileri hakkında güncelleme yapabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialId" />
                            <div class="form-group">
                                <label for="exampleInputName">Referans Ad ve Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Adı ve Soyadını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Unvan</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Unvanı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referans Görseli URL Adresi</label>
                                <input type="file" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="URL Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputComment">Referans Yorumu</label>
                                <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Referans Yorumu"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referansı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>